<div class="container">
<h1 class="text-center my-5">タグ登録</h1>

<div class="col-md-6 offset-md-3">
  <%= form_for @equipment do |f| %>
    <div class="form-group">
      <%= f.label "タグ名" %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="text-center"><%= f.submit "登録", class: 'btn btn-primary w-25 my-auto' %></div>
  <% end %>
</div>
</div>