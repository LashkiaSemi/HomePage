<!DOCTYPE html>
<html>
  <head>
    <title>Lashkia 研究室</title>

    <%= render 'layouts/default' %>
    <%= render 'layouts/shim' %>
  </head>

  <body>
    <%= render 'layouts/header' %>

      <% flash.each do |type, msg| %>
        <div class="alert alert-<%= type %> mt-3" ><%= msg %></div>
      <% end %>

      <%= yield %>

      <%= render 'layouts/footer' %>
      <!-- 開発時、デバック情報などを出力する -->
      <%= debug(params) if Rails.env.development? %>

  </body>
</html>
