          <li class="nav-item"><%= link_to '研究室備品', equipments_path , class: 'nav-link'%></li>
          <li class="nav-item"><%= link_to 'レクチャー', lectures_path , class: 'nav-link'%></li>
          <li class="nav-item"><%= link_to 'ログアウト', logout_path, method: "delete", class: 'nav-link' %></li>
          <% else %>
          <li class="nav-item"><%= link_to 'ログイン', login_path , class: 'nav-link' %></li>
          <% end %>
        </ul>
      </div>
    </nav>
