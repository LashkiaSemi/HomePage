    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#menu">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- 後々ログインの状態に合わせて、表示するnav-itemを変える処理を追記する -->
    <nav>
      <div id="menu" class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item"><%= link_to '活動記録', '#' , class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to '学会発表', publication_path , class: 'nav-link'%></li>
          <li class="nav-item"><%= link_to '卒業研究', '#' , class: 'nav-link'%></li>
